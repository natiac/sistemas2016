<p id="notice"><%= notice %></p>
<div class="box box-success">
  <div class="container">
    <div clas="box-header">
        <h3 class="box-title">Movimiento de Caja</h3>
    </div>
  </div>
  <div class="col-md-2">
          <%= link_to 'Nuevo Movimiento', new_movimiento_caja_path, :class=> "btn btn-block btn-success" ,style: " color:#FFF" %>
  </div>
  <br> 
  <div class="box-body">
      <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
      <div class="row">
      <div class="col-sm-12">
   <br>    
<table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
  <thead>
    <tr role="row">

      <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 181px;" aria-label="Rendering engine: activate to sort column descending" aria-sort="ascending">Tipo</th>
      <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 181px;" aria-label="Rendering engine: activate to sort column descending" aria-sort="ascending">Descripcion</th>
      <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 181px;" aria-label="Rendering engine: activate to sort column descending" aria-sort="ascending">Monto Total</th>
      <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 181px;" aria-label="Rendering engine: activate to sort column descending" aria-sort="ascending">Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @movimientos_cajas.each do |movimiento_caja| %>
      <tr>
        <td><%= movimiento_caja.tipo %></td>
        <td><%= movimiento_caja.descripcion %></td>
        <td><%= movimiento_caja.monto_total %></td>
        <td><%= movimiento_caja.fecha %></td>
        <<td>
              <%= link_to movimiento_caja_path(movimiento_caja), class: 'btn btn-success btn-outline btn-circle', title: 'Mostrar Detalle', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
                <span class="glyphicon glyphicon-eye-open"></span>
              <% end %>
              <%= link_to edit_movimiento_caja_path(movimiento_caja), class: 'btn btn-warning btn-outline btn-circle', title: 'Editar', 'remote' => true, 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
                <span class="glyphicon glyphicon-pencil"></span>
              <% end %>
              <%= link_to movimiento_caja, method: :delete, data: { confirm: 'Va eliminarlo, esta seguro?' }, class: 'btn btn-danger btn-outline btn-circle', title: 'Borrar', 'data-toggle' => 'tooltip', 'data-placement' => 'right'  do %>
                <span class="glyphicon glyphicon-remove"></span>
              <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>


