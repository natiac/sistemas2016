<p id="notice"><%= notice %></p>

<h1>Conceptos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Monto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conceptos.each do |concepto| %>
      <tr>
        <td><%= concepto.nombre %></td>
        <td><%= concepto.monto %></td>
        <td><%= link_to 'Show', concepto %></td>
        <td><%= link_to 'Edit', edit_concepto_path(concepto) %></td>
        <td><%= link_to 'Destroy', concepto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Concepto', new_concepto_path %>
