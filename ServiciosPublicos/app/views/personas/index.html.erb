<p id="notice"><%= notice %></p>
<div class="box box-success">
  <div class="container">
    <div clas="box-header">
      <h3 class="box-title">Personas</h3>
    </div>
  </div>

  <div class="col-md-2">
    <%= link_to 'Nueva Persona', new_persona_path, :class=> "btn btn-block btn-success" ,style: " color:#FFF" %>
  </div>

  <br>

  <div class="box-body">
    <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
      <div class="row">
        <div class="col-sm-12">
          <br>
          <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
            <thead>
              <tr role="row">
                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 224px;" aria-label="Browser: activate to sort column ascending">
                  Nombre
                </th>
                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 224px;" aria-label="Browser: activate to sort column ascending">
                  Nacionalidad
                </th>
                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 224px;" aria-label="Browser: activate to sort column ascending">
                  Direccion
                </th>
                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 224px;" aria-label="Browser: activate to sort column ascending">
                  RUC
                </th>
                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 224px;" aria-label="Browser: activate to sort column ascending">
                  Telefono
                </th>
                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 224px;" aria-label="Browser: activate to sort column ascending">
                  NÂº de C.I.
                </th>
                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 224px;" aria-label="Browser: activate to sort column ascending">
                  Correo
                </th>
                <th colspan="3"  , class="col-sm-4">
                  Opciones
                </th>
              </tr>
            </thead>

            <tbody>
              <% @personas.each do |persona| %>
                <tr role="row">
                  <td><%= persona.nombre %></td>
                  <td><%= persona.nacionalidad %></td><td><%= persona.direccion %></td>
                  <td><%= persona.ruc %></td>
                  <td><%= persona.telefono %></td>
                  <td><%= persona.ci_numero %></td>
                  <td><%= persona.correo %></td>
                  <td><%= link_to 'Mostrar', persona %></td>
                  <td><%= link_to 'Editar', edit_persona_path(persona) %></td>
                  <td><%= link_to 'Borrar', persona, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
                </tr>
              <% end %>
            </tbody>

          </table>
        </div>
      </div>
    </div>
  </div>
</div>